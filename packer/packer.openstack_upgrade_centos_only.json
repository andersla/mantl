{
  "variables": {
    "blabla": "",
    "blabla2": ""
  },
  "builders": [{
         "type": "openstack",
	     "image_name": "phenomenal-mantl-openstack",
	     "source_image_name": "CentOS7",
	     "flavor": "m1.small",
	     "ssh_username": "centos",
	     "ssh_pty": true,
	     "floating_ip_pool": "public",
	     "networks": ["1469a145-41b8-4d4b-b79a-408145c2f196"],
	     "availability_zone": "nova"
    }],
  "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "scripts": [
                "{{pwd}}/packer/scripts/ansible.sh"
            ]
        },
	    {
	        "type": "ansible-local",
	        "playbook_dir": "{{pwd}}/playbooks",
	        "playbook_file": "{{pwd}}/playbooks/upgrade-packages.yml"
	    },
	    { "type": "shell",
		  "start_retry_timeout": "15m",
		  "inline": ["echo $(date) > /tmp/rebooted"]
		}
    ]
    
}
